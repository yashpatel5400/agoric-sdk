{
  "name": "@agoric/swingset-runner",
  "version": "0.13.11",
  "private": true,
  "description": "Application to launch SwingSet instances for development and testing",
  "type": "module",
  "main": "./src/main.js",
  "repository": "https://github.com/Agoric/agoric-sdk",
  "author": "Agoric",
  "license": "Apache-2.0",
  "scripts": {
    "build": "exit 0",
    "test": "ava",
    "test:c8": "c8 $C8_OPTIONS ava --config=ava-nesm.config.js",
    "test:xs": "exit 0",
    "lint-fix": "eslint --fix '**/*.js'",
    "lint-check": "yarn lint",
    "lint": "eslint '**/*.js'",
    "ci:autobench": "./autobench"
  },
  "dependencies": {
    "@agoric/assert": "^0.3.7",
    "@agoric/babel-standalone": "^7.14.3",
    "@agoric/bundle-source": "^1.4.5",
    "@agoric/ertp": "^0.11.11",
    "@agoric/eventual-send": "^0.13.23",
    "@agoric/install-ses": "^0.5.21",
    "@agoric/marshal": "^0.4.20",
    "@agoric/nat": "^4.1.0",
    "@agoric/same-structure": "^0.1.21",
    "@agoric/stat-logger": "^0.4.17",
    "@agoric/swing-store-lmdb": "^0.5.7",
    "@agoric/swing-store-simple": "^0.4.7",
    "@agoric/swingset-vat": "^0.19.0",
    "@agoric/tame-metering": "^2.0.7",
    "@agoric/zoe": "^0.17.6",
    "expose-gc": "^1.0.0",
    "n-readlines": "^1.0.1",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "ava": "^3.12.1",
    "c8": "^7.7.2",
    "import-meta-resolve": "^1.1.1"
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "eslintIgnore": [
    "bundle-*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "2m"
  }
}
